{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Police Fatalities in United States",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/gtan0021/3179-Homework9/main/US_States_SOVI_Infographics.json",
    "format": {"type": "topojson", "feature": "US_States_SOVI_Infographics"}
  },
  "transform": [
    {
      "lookup": "properties.STATE_NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/gtan0021/3179-Homework9/main/states_fatalities.csv"
        },
        "key": "States",
        "fields": ["Number_of_Fatalities"]
      }
    },
    {"calculate": "datum.Number_of_Fatalities/datum.properties.POPULATION * 10000", "as": "Number of Police Fatalities per 10,000 population"}
  ],
  "projection": {"type": "equirectangular"},
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Number of Police Fatalities per 10,000 population",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [0.15, 0.3, 0.5, 0.7,1],
        "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603","#792600","#591C01"]
        }
    },
    "tooltip": [
      {"field": "properties.STATE_NAME", "type": "nominal", "title": "States"},
      {"field": "Number of Police Fatalities per 10,000 population", "type": "quantitative"}
    ]
  }
}